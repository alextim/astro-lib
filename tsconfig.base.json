{
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "./dist",
    "target": "ES2020",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "declaration": true,
    "emitDeclarationOnly": true
  }
}
