{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/alextim/astro-lib.git"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "scripts"
  ],
  "scripts": {
    "changeset": "changeset",
    "release": "pnpm run build && changeset publish",
    "build": "turbo run build --no-deps --scope=astro-robots-txt --scope=astro-webmanifest",
    "build:r": "turbo run build --no-deps --scope=astro-robots-txt",
    "build:w": "turbo run build --no-deps --scope=astro-webmanifest",
    "build:examples": "turbo run build --scope=\"@example/*\"",
    "typecheck": "turbo run typecheck --no-deps --scope=astro-robots-txt --scope=astro-webmanifest --scope=at-utils",
    "lint": "eslint \"packages/**/*.ts\"",
    "lint:fix": "eslint --fix \"packages/**/*.ts\"",
    "format": "prettier -w  .",
    "prettier:check": "prettier --check .",
    "test": "turbo run test --no-deps  --concurrency=1 --scope=astro-robots-txt --scope=astro-webmanifest --scope=at-utils",
    "test:r": "turbo run test  --no-deps --scope=astro-robots-txt --concurrency=1",
    "test:w": "turbo run test  --no-deps --scope=astro-webmanifest --concurrency=1",
    "test:u": "turbo run test  --no-deps --scope=at-utils --concurrency=1",
    "test:pub": "turbo run test:pub --no-deps",
    "prepare": "husky install",
    "clean:all": "rimraf ./**/dist ./**/.pnpm-debug.log ./**/pnpm-lock.yaml ./**/node_modules",
    "version": "changeset version && pnpm install --no-frozen-lockfile && pnpm run format"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "astro": "^1.0.0-beta.31",
    "commitlint": "^17.0.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "turbo": "^1.2.11",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vitest": "^0.12.9"
  },
  "engines": {
    "pnpm": ">=7.0.0"
  },
  "packageManager": "pnpm@7.0.0"
}
